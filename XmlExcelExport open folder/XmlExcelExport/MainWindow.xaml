<Window x:Class="XmlExcelExport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XmlExcelExport"
        mc:Ignorable="d"
        Title="XmlExcelExport por Carpeta" Height="286" Width="303"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Button x:Name="btnSelectFiles" Content="Seleccionar Carpeta" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Click="btnSelectFiles_Click"/>
        <Button x:Name="btnSaveFile" Content="Exportar Excel" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="120" Click="btnSaveFile_Click"/>
        <TextBox x:Name="txtEditor" Margin="10,60,10,10" TextWrapping="Wrap" Text="" IsReadOnly="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"/>


    </Grid>
</Window>
